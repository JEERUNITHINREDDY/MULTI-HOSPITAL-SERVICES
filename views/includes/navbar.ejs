<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand logo-icon" href="/listings"><img class="logo-icon" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRGm2ra9r3Uig9r50KPmU5HLMZCQ3YPWLNC2A&s" alt=""></a>
      <button class="navbar-toggler" 
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup" 
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link head" href="/listings"> MULTI HOSPITALS</a>
        </div>

        <div class="navbar-nav ms-auto">
          <form class="d-flex" role="search">
            <input class="form-control me-2 search-inp" type="search" placeholder="Search Hospitals" aria-label="Search">
            <button class="btn btn-search search-btn"  type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
          </form>
        </div>

        <div class="navbar-nav ms-auto">
            <select class="flt"   name="filter" id="filter">
            <option value="" selected >Location</option>
            <option class="filters" value="vadodara">Vadodara</option>
            <option class="filters" value="ahmedabad">Ahmedabad</option>
            <option class="filters" value="surat">Surat</option>
          </select>
          <% if(!currUser) { %>
          <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } %>
          <% if(currUser) { %>
            <a class="nav-link" href="listings/appointments"><b>Appointmentsüè•</b> </a>
          <a class="nav-link" href="/logout"><b>Log out</b> </a>
          <% } %>
        </div>

      </div>
    </div>
  </nav>

  <script>
    document.getElementById('filter').addEventListener('change', function(){
      this.options[0].style.display = 'none';
    });

      const locationUrls = {
          vadodara: 'http://localhost:8085/listings/filter/vadodara',
          ahmedabad: 'http://localhost:8085/listings/filter/ahmedabad',
          surat: 'http://localhost:8085/listings/filter/surat'
      };

      document.getElementById('filter').addEventListener('change', function() {
          const selectedLocation = this.value;
          if (selectedLocation) {
              window.location.href = locationUrls[selectedLocation];
          }
          this.options[0].style.display = 'none';
      });
  </script>